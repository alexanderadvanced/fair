        <input type="text" class="form-control" placeholder="John Doe" name="rental_contract[residents][]">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" data-rental-contract-form-person-remove>Remove
            </button>
        </div>
    </div>
</div>

<div hidden id="rental-contract-form-party-template">
    <div class="input-group mb-2">
        <input type="text" class="form-control" placeholder="John Doe" name="rental_contract[parties][]">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" data-rental-contract-form-person-remove>Remove
            </button>
        </div>
    </div>
</div>